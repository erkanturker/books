{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "isbn": {
        "type": "string",
        "pattern": "^[0-9]{10}$"
      },
      "amazon_url": {
        "type": "string",
        "format": "uri"
      },
      "author": {
        "type": "string"
      },
      "language": {
        "type": "string"
      },
      "pages": {
        "type": "integer",
        "minimum": 1
      },
      "publisher": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "year": {
        "type": "integer",
        "minimum": 1
      }
    },
    "required": ["isbn"]
  }